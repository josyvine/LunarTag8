<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.camera.CameraFragment">

    <!-- CameraX PreviewView fills the entire screen -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top bar for indicators -->
    <LinearLayout
        android:id="@+id/top_indicators_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- GPS Accuracy Indicator (Left) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/indicator_gps_accuracy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_gps_poor"
                tools:src="@drawable/ic_gps_good" />

            <TextView
                android:id="@+id/text_gps_accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                tools:text="Acc: 3.5m" />
        </LinearLayout>

        <!-- Mini Map Preview (Right) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="8dp"
            app:strokeColor="@android:color/white"
            app:strokeWidth="2dp"
            app:cardElevation="4dp">

            <org.osmdroid.views.MapView
                android:id="@+id/mini_map_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


    <!-- Bottom controls bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_controls_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Gallery Thumbnail (Left Edge) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_gallery_thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/image_gallery_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- FOLDER BUTTON (New: Placed between Gallery and Capture) -->
        <!-- Uses system 'save' icon as placeholder for 'Select Folder' -->
        <ImageButton
            android:id="@+id/button_save_folder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_save"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Select Save Folder"
            app:tint="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/card_gallery_thumbnail"
            app:layout_constraintEnd_toStartOf="@id/button_capture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <!-- Shutter Button (Center) -->
        <ImageButton
            android:id="@+id/button_capture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_shutter_button"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/camera_capture_button_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- GPS STATUS BUTTON (New: Placed between Capture and Flip) -->
        <!-- Uses system 'mylocation' icon -->
        <ImageButton
            android:id="@+id/button_gps_status"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_mylocation"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Force GPS Refresh"
            app:tint="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/button_capture"
            app:layout_constraintEnd_toStartOf="@id/button_flip_camera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <!-- Flip Camera Button (Right Edge) -->
        <ImageButton
            android:id="@+id/button_flip_camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Flip Camera"
            app:tint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Slot Counter (Positioned above Flip Button) -->
        <TextView
            android:id="@+id/text_slot_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/button_flip_camera"
            app:layout_constraintEnd_toEndOf="@id/button_flip_camera"
            app:layout_constraintStart_toStartOf="@id/button_flip_camera"
            tools:text="5 Slots"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- LIVE DEBUG CONSOLE (Kept EXACTLY as requested) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="160dp"
        android:background="#99000000"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_debug_console"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--- LIVE LOG SYSTEM STARTED ---\nWaiting for user interaction..."
            android:textColor="#00FF00"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>