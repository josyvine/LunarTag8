<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- This block is now included exactly as your reference requires -->
    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="34"
        tools:overrideLibrary="com.google.android.gms.ads_identifier" />

    <!-- Core Permissions for Safe Voice -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Location Permissions for Safe Voice -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- KYC Permissions for Safe Voice -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Declare hardware features Safe Voice uses -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.microphone" android:required="true" />

    <!-- The application tag now matches your reference style -->
    <application
        android:name=".SafeVoiceApplication"
        android:allowBackup="true"
        android:icon="@drawable/safevoice"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- DisclaimerActivity is the LAUNCHER, ensuring user agrees to terms first -->
        <activity
            android:name=".DisclaimerActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- The main app interface, launched after the disclaimer is accepted -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- The screen for user identity verification -->
        <activity
            android:name=".KycActivity"
            android:label="Verify Your Identity"
            android:exported="false" />

        <!-- The "Always Listening" background service -->
        <service
            android:name=".services.VoiceRecognitionService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone" />

        <!-- The service that handles sending alerts after a trigger -->
        <service
            android:name=".services.EmergencyHandlerService"
            android:enabled="true"
            android:exported="false" />

        <!-- CRITICAL: This disables the default Firebase initializer,
             allowing our app to load the configuration dynamically at runtime. -->
        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="${applicationId}.firebaseinitprovider"
            tools:node="remove" />

    </application>

</manifest>